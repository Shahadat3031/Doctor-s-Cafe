<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/doctors_background"
tools:context="net.a6te.lazycoder.doctorscafe.AddDoctor">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|bottom"
    android:layout_marginTop="120dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/doctorNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:gravity="center"/>
    <EditText
        android:id="@+id/doctorDetailsET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="About"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:gravity="center"/>

    <EditText
        android:id="@+id/doctorPhoneET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Phone Number"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:gravity="center"/>
    <EditText
        android:id="@+id/doctorEmailET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:gravity="center"
        android:hint="Email"/>

    <TextView
        android:textSize="18dp"
        android:id="@+id/doctorAppoinmentET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="selectDate"
        android:hint="Select Date"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:gravity="center"/>

</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveBtn"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:background="#4527A0"/>


</LinearLayout>

